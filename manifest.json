{
    "manifest_version": 2,
    "name": "Website Time Tracker",
    "author": "Tahir Nazir",
    "version": "1.3",
    "description": "Tracks time spent on websites.",
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "notifications"
      ],
      "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
      "browser_action": {
        "default_popup": "popup.html"
      },
      "options_page": "options.html"
    }